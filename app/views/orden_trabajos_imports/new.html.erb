<div class="container mt-5">
  <h2 class="mb-4 text-center">Importar Órdenes de Trabajo desde Excel</h2>

  <% if @errors.present? %>
    <div class="alert alert-danger mt-4">
      <h5>❌ Errores detectados:</h5>
      <ul class="mb-0">
        <% @errors.each_with_index do |error, i| %>
          <li><strong><%= i + 1 %>.</strong> <%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card p-4 shadow-sm mt-4">
    <%= form_with url: orden_trabajos_imports_path, local: true, html: { multipart: true } do |form| %>
      <div class="form-group mb-3">
        <%= form.label :file, "Seleccionar archivo Excel (.xlsx o .xls)", class: "form-label" %>
        <%= form.file_field :file, accept: ".xls,.xlsx", class: "form-control" %>
      </div>

      <%= form.submit "Importar", class: "btn btn-primary btn-lg mt-3" %>
    <% end %>
  </div>

  <div class="alert alert-info mt-4">
    <strong>Formato esperado del Excel:</strong><br>
    trnum, trcan, trcar, clinom, papel, gramaje, colores, pliego, nomprod, fecentr, cam10, cam12, cam24
  </div>
</div>
